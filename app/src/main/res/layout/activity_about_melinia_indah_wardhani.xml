<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageMelinia"
        android:layout_marginTop="26dp"
        android:layout_width="200dp"
        android:layout_height="229dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/profil_melinia" />

    <TextView
        android:id="@+id/TxtMnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageMelinia"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Nama      : Melinia Indah Wardhani"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/TxtMNim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtMnama"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="NIM         : 18.11.0062"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/TxtMTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtMNim"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Tugas     : Membuat Form User"
        android:textSize="18dp"/>



</RelativeLayout>