<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtprofile"
                    android:layout_width="177dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="PROFILE"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/getNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtprofile"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="nama"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Handphone"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/getNoHp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getNama"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="no hp"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/getAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getNoHp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="alamat"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/getEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/getAlamat"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="email"
                    android:textSize="30sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/txtAboutView"
                android:layout_width="380dp"
                android:layout_height="140dp"
                android:layout_below="@id/profile"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="Aplikasi Ini Merupakan aplikasi jual beli rongsok online, dimana nantinya pengepul akan menuju lokasi user untuk mengambil rongsoknya "
                android:textSize="20sp" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAboutView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>